{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "files": {
    "includes": ["**", "!node_modules", "!dist", "!coverage"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noTemplateCurlyInString": "off"
      }
    }
  },
  "assist": {
    "enabled": true
  }
}
